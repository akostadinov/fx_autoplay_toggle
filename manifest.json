{
  "manifest_version": 2,
  "name": "Autoplay Toggle",
  "version": "0.0.4",
  "description": "A toggle button for quickly turning the autoplay userpref on and off, for dealing with players which break when autplay is disabled.",
  "homepage_url": "https://github.com/Aligorith/fx_autoplay_toggle",
  "icons": {
    "48": "data/icon.svg",
    "96": "data/icon.svg"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "data/disabled.svg",
    "default_title": "toggle autoplay"
  },
  "background": {
    "scripts": ["index.js"],
    "persistent": true
  },
  "author": "Aligorith",
  "permissions": ["browserSettings"],
  "keywords": [
    "jetpack", "autoplay", "preferences"
  ],
  "applications": {
    "gecko": {
      "id": "{ec8030f7-c20a-464f-9b0e-13a3a9e97384}",
      "strict_min_version": "57.0"
    }
  }
}
